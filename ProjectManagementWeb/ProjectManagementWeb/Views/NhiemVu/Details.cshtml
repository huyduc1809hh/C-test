@model ProjectManagementWeb.Models.NhiemVu

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <a href="@Url.Action("Index", "NhiemVu")" class="btn btn-sm" style="background-color:#27403E;color:white; width:160px; margin-top:10px; margin-left:10px">
        <i class="fas fa-arrow-left"></i> Quay về danh sách
    </a>
    <div class="container">
        <h2>Thông tin nhiệm vụ</h2>
        <dl class="dl-horizontal">
            <dt>ID Dự án</dt>
            <dd>@Html.DisplayFor(model => model.DuAnID)</dd>

            <dt>ID Người được giao</dt>
            <dd>@Html.DisplayFor(model => model.NguoiDuocGiaoID)</dd>

            <dt>Tên nhiệm vụ</dt>
            <dd>@Html.DisplayFor(model => model.TenNhiemVu)</dd>

            <dt>Mô tả</dt>
            <dd>@Html.DisplayFor(model => model.MoTa)</dd>

            <dt>Trạng thái</dt>
            <dd>@Html.DisplayFor(model => model.TrangThai)</dd>

            <dt>Ngày tạo</dt>
            <dd>@Html.DisplayFor(model => model.NgayTao)</dd>

            <dt>Hạn hoàn thành</dt>
            <dd>@Html.DisplayFor(model => model.HanHoanThanh)</dd>
        </dl>
    </div>

    <style>
        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .dl-horizontal dt {
            font-weight: bold;
            color: #555;
        }

        .dl-horizontal dd {
            margin-left: 0;
            margin-bottom: 15px;
            padding: 0 15px;
            border-left: 4px solid #007bff;
            background-color: #e9ecef;
            border-radius: 4px;
        }

        .dl-horizontal dt, .dl-horizontal dd {
            display: flex;
            justify-content: space-between;
        }
    </style>
}