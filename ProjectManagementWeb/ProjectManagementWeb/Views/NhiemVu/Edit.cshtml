@model ProjectManagementWeb.Models.NhiemVu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <meta charset="utf-8" />
}

@using (Html.BeginForm("Create", "NhiemVu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">Cập nhật nhiệm vụ</strong>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "NhiemVu")" class="btn btn-sm" style="background-color:#27403E;color:white">
                        <i class="fas fa-arrow-left"></i> Quay về danh sách
                    </a>
                    <button type="submit" class="btn btn-sm btn-success">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label>ID</label>
                    @Html.EditorFor(model => model.NhiemVuID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NhiemVuID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Tên nhiệm vụ</label>
                    @Html.EditorFor(model => model.TenNhiemVu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenNhiemVu, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Trạng thái</label>
                    @Html.DropDownListFor(model => model.TrangThai, new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem {Text = "Chưa thực hiện", Value = "Chưa thực hiện"},
                        new SelectListItem {Text = "Đang thực hiện", Value = "Đang thực hiện"},
                        new SelectListItem {Text = "Đã hoàn thành", Value = "Đã hoàn thành"}
                    }, "Value", "Text", Model.TrangThai), "Chọn trạng thái", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Dự án</label>
                    @Html.EditorFor(model => model.DuAnID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DuAnID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Thành viên</label>
                    @Html.EditorFor(model => model.NguoiDuocGiaoID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NguoiDuocGiaoID, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Ngày tạo</label>
                    @Html.EditorFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Hạn hoàn thành</label>
                    @Html.EditorFor(model => model.HanHoanThanh, new { htmlAttributes = new { @class = "form-control", type = "date", Value = DateTime.Now.AddDays(7).ToString("dd-MM-yyyy") } })
                    @Html.ValidationMessageFor(model => model.HanHoanThanh, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
}
